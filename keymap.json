[
  // In Editor
  {
    "context": "Editor && vim_mode==normal && !VimWaiting && !menu",
    "bindings": {
      // ToggleFocus of FileTree
      "space e": "project_panel::ToggleFocus",
      "space o": "workspace::ToggleLeftDock",
      "space /": ["editor::ToggleComments", { "advance_downwards": false }],
      "space t t": "terminal_panel::ToggleFocus"
    }
  },
  //Terminal
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-w w": "terminal_panel::ToggleFocus"
    }
  },
  // In ProjectPanel
  {
    "context": "ProjectPanel",
    "bindings": {
      "space e": "workspace::ToggleLeftDock",
      // "space o": "project_panel::ToggleFocus",

      "left": "project_panel::CollapseSelectedEntry",
      "right": "project_panel::ExpandSelectedEntry",
      "a f": "project_panel::NewFile",
      "a d": "project_panel::NewDirectory",
      "cmd-x": "project_panel::Cut",
      "cmd-c": "project_panel::Copy",
      "cmd-v": "project_panel::Paste",
      "cmd-alt-c": "project_panel::CopyPath",
      "alt-cmd-shift-c": "project_panel::CopyRelativePath",
      "r": "project_panel::Rename",
      "d": ["project_panel::Trash", { "skip_prompt": false }],
      "cmd-backspace": ["project_panel::Delete", { "skip_prompt": false }],
      "cmd-delete": ["project_panel::Delete", { "skip_prompt": false }],
      "o f": "project_panel::RevealInFinder",
      "alt-shift-f": "project_panel::NewSearchInDirectory",
      "shift-down": "menu::SelectNext",
      "shift-up": "menu::SelectPrev",
      "escape": "menu::Cancel"
    }
  }
]
